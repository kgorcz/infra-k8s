{
    "variables": {
        "aws_access_key": "{{env `AWS_ACCESS_KEY_ID`}}",
        "aws_secret_key": "{{env `AWS_SECRET_ACCESS_KEY`}}"
    },
    "builders": [
        {
            "type": "amazon-ebs",
            "access_key": "{{ user `aws_access_key` }}",
            "secret_key": "{{ user `aws_secret_key` }}",
            "region": "us-east-2",
            "source_ami": "ami-00e5800cc210e31d7",
            "instance_type": "t3a.micro",
            "ssh_username": "admin",
            "ami_name": "k8s 1.18"
        }
    ],
    "provisioners": [
        {
            "type": "shell",
            "script": "base.sh"
        }
    ]
  }
  